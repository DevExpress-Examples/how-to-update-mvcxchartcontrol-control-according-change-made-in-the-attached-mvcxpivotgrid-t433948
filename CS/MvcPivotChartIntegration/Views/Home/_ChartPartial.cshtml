@using MvcApplication1.Controllers
@using MvcApplication1.Helper

@Html.DevExpress().Chart(settings => {
    settings.Name = "Chart";
    settings.CallbackRouteValues = new { Controller = "Home", Action = "ChartPartial" };
    settings.ClientSideEvents.BeginCallback = "ChartBeginCallback";
    settings.Width = System.Web.UI.WebControls.Unit.Pixel(600);
    settings.Height = System.Web.UI.WebControls.Unit.Pixel(300);
    
}).Bind(PivotGridExtension.GetDataObject(PivotGridSettingsHelper.CreatePivotGridSettings(), Model)).GetHtml()